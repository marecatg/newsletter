<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Campit{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('bundles/app/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/css/style.css') }}">
    {% block stylesheets %}{% endblock %}

    <script src="{{ asset('bundles/app/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/app/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/app/image/newsletter.png') }}"/>
</head>
<body>
{% block header %}
    <header class="header-banner-top">
    <div class="main-navigation">
    <input type="checkbox" name="mobile-menu-toggle" id="mobile-menu-toggle" class="mobile-menu-box"/>
    <nav class="horizontal-nav primary-wrapper" role='navigation'>
    {% if is_granted("ROLE_USER") %}

                <ul>
                    <li><div>{% block message %} Bienvenu dans CAMPIT, votre application Newsletter !{% endblock %}</div></li>
                    <li><a href="{{ path('fos_user_security_logout') }}">Deconnexion</a></li>
                </ul>
        {% else %}
            <ul>
                <li><div>Bienvenu dans CAMPIT, votre application Newsletter !</div></li>
            </ul>
    {% endif %}
    </nav>
        <label for="mobile-menu-toggle" class="mobile-menu-label hidden"></label>
    </div>
    </header>
{% endblock header %}
{% block body %}{% endblock %}
{% block javascripts %}

{% endblock %}
</body>
</html>
